<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Matemática Divertida"
        android:textSize="30dp"
        android:textColor="#000" />

    <Button
        android:id="@+id/btnContagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:onClick="contagem"
        android:text="Contagem" />

    <Button
        android:id="@+id/btnAritmetica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContagem"
        android:layout_centerHorizontal="true"
        android:onClick="aritmetica"
        android:text="Aritmética Básica" />

    <Button
        android:id="@+id/btnMaiorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAritmetica"
        android:layout_centerHorizontal="true"
        android:onClick="maiorNumero"
        android:text="Maior Número" />


</android.widget.RelativeLayout>